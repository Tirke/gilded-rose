{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18 + ESM",
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2022"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false, // ESM doesn't yet support JSON modules.
    "module": "node16",
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "files": ["gilded.ts"]
}
